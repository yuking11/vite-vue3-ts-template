{
  "name": "vue3-vite-ts",
  "description": "A Vue3 / Vite / TS starter template",
  "version": "0.0.0",
  "author": "yuking11",
  "license": "MIT",
  "engines": {
    "node": "16.8.0"
  },
  "scripts": {
    "dev": "vite",
    "local": "vite --mode local-dev",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "serve": "vite preview",
    "lint": "yarn lint:markup && yarn lint:script && yarn lint:style",
    "lint:markup": "vue-tsc --noEmit",
    "lint:script": "eslint --ext .ts,vue --ignore-path .gitignore .",
    "lint:style": "stylelint 'src/**/*.{vue,scss,css}' --ignore-path .gitignore",
    "lint-staged": "lint-staged",
    "format:markup": "prettier -w -u src/**/*.{ts,js,scss,vue}",
    "format:script": "eslint --ext .ts,vue --fix --ignore-path .gitignore .",
    "format:style": "stylelint 'src/**/*.{vue,scss,css}' --fix --ignore-path .gitignore",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,js,vue}": "eslint src --fix",
    "*.{css,scss,vue}": "stylelint --fix",
    "*.{ts,js,scss,vue}": "prettier -w -u"
  },
  "dependencies": {
    "pinia": "^2.0.14",
    "vue": "^3.2.37",
    "vue-router": "4"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "@vue/test-utils": "^2.0.0-rc.21",
    "@vueuse/head": "^0.7.6",
    "autoprefixer": "^10.4.7",
    "c8": "^7.11.2",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-vue": "^8.7.1",
    "happy-dom": "^4.1.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "postcss": "^8.4.12",
    "postcss-html": "^1.4.1",
    "postcss-scss": "^4.0.4",
    "prettier": "^2.6.2",
    "sass": "^1.52.1",
    "stylelint": "^14.7.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "typescript": "^4.7.2",
    "vite": "^2.9.9",
    "vite-plugin-pages": "^0.23.0",
    "vite-plugin-svg-icons": "^2.0.1",
    "vite-plugin-vue-layouts": "^0.6.0",
    "vitest": "^0.9.4",
    "vue-tsc": "^0.37.9"
  }
}
