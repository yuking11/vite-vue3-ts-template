{
  "name": "vue3-vite-ts",
  "description": "A Vue3 / Vite / TS starter template",
  "version": "0.0.0",
  "author": "yuking11",
  "license": "MIT",
  "engines": {
    "node": "16.8.0"
  },
  "scripts": {
    "dev": "vite",
    "local": "vite --mode local-dev",
    "build": "vue-tsc --noEmit && vite build",
    "build:dev": "vue-tsc --noEmit && vite build --mode development",
    "serve": "vite preview",
    "lint": "yarn lint:script && yarn lint:style",
    "lint:markup": "vue-tsc --noEmit",
    "lint:script": "eslint --ext .ts,vue --ignore-path .gitignore .",
    "lint:style": "stylelint 'src/**/*.{vue,scss,css}' --ignore-path .gitignore",
    "lint-staged": "lint-staged",
    "format:script": "eslint --ext .ts,vue --fix --ignore-path .gitignore .",
    "format:style": "stylelint 'src/**/*.{vue,scss,css}' --fix --ignore-path .gitignore",
    "test": "jest",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,js,vue}": "eslint src --fix",
    "*.{css,scss,vue}": "stylelint --fix",
    "*.{ts,js,scss,vue}": "prettier -w -u"
  },
  "dependencies": {
    "pinia": "^2.0.11",
    "vue": "^3.2.22",
    "vue-router": "4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "@vitejs/plugin-vue": "^1.10.2",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "@vue/test-utils": "^2.0.0-rc.18",
    "@vueuse/head": "^0.7.2",
    "autoprefixer": "^10.4.2",
    "babel-jest": "26",
    "babel-preset-vite": "^1.0.4",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-vue": "^8.4.0",
    "husky": "^7.0.4",
    "jest": "26",
    "jest-transform-stub": "^2.0.0",
    "lint-staged": "^12.3.2",
    "postcss": "^8.3.11",
    "postcss-html": "^1.3.0",
    "postcss-scss": "^4.0.3",
    "prettier": "^2.5.1",
    "sass": "^1.49.7",
    "stylelint": "^14.5.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "ts-jest": "26",
    "typescript": "^4.5.5",
    "vite": "^2.7.13",
    "vite-plugin-pages": "^0.20.2",
    "vite-plugin-svg-icons": "^2.0.1",
    "vite-plugin-vue-layouts": "^0.6.0",
    "vue-jest": "^5.0.0-alpha.10",
    "vue-tsc": "^0.31.1"
  }
}
