{
  "name": "vue3-vite-ts",
  "description": "A Vue3 / Vite / TS starter template",
  "version": "0.0.0",
  "author": "yuking11",
  "license": "MIT",
  "engines": {
    "node": "16.17.0"
  },
  "scripts": {
    "dev": "vite",
    "local": "vite --mode local-dev",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "serve": "vite preview",
    "lint": "yarn lint:markup && yarn lint:script && yarn lint:style",
    "lint:markup": "vue-tsc --noEmit",
    "lint:script": "eslint --ext .ts,vue --ignore-path .gitignore .",
    "lint:style": "stylelint 'src/**/*.{vue,scss,css}' --ignore-path .gitignore",
    "lint-staged": "lint-staged",
    "format:markup": "prettier -w -u src/**/*.{ts,js,scss,vue}",
    "format:script": "eslint --ext .ts,vue --fix --ignore-path .gitignore .",
    "format:style": "stylelint 'src/**/*.{vue,scss,css}' --fix --ignore-path .gitignore",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,js,vue}": "eslint src --fix",
    "*.{css,scss,vue}": "stylelint --fix",
    "*.{ts,js,scss,vue}": "prettier -w -u"
  },
  "dependencies": {
    "pinia": "^2.0.35",
    "vue": "^3.2.45",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@types/node": "^18.16.2",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vitejs/plugin-vue": "^4.2.1",
    "@vitest/coverage-c8": "^0.30.1",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/test-utils": "^2.3.2",
    "@vueuse/head": "^1.1.26",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-vue": "^9.11.0",
    "happy-dom": "^9.10.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "postcss": "^8.4.23",
    "postcss-html": "^1.5.0",
    "postcss-scss": "^4.0.6",
    "prettier": "^2.8.8",
    "sass": "^1.62.1",
    "stylelint": "^15.6.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-config-standard-scss": "^9.0.0",
    "typescript": "^5.0.4",
    "vite": "^4.3.3",
    "vite-plugin-pages": "^0.29.0",
    "vite-plugin-svg-icons": "^2.0.1",
    "vite-plugin-vue-layouts": "^0.8.0",
    "vitest": "^0.30.1",
    "vue-tsc": "^1.4.4"
  }
}
