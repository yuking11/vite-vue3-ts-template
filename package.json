{
  "name": "vue3-vite-ts",
  "description": "A Vue3 / Vite / TS starter template",
  "version": "0.0.0",
  "author": "yuking11",
  "license": "MIT",
  "engines": {
    "node": "16.8.0"
  },
  "scripts": {
    "dev": "vite",
    "local": "vite --mode local-dev",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "serve": "vite preview",
    "lint": "yarn lint:markup && yarn lint:script && yarn lint:style",
    "lint:markup": "vue-tsc --noEmit",
    "lint:script": "eslint --ext .ts,vue --ignore-path .gitignore .",
    "lint:style": "stylelint 'src/**/*.{vue,scss,css}' --ignore-path .gitignore",
    "lint-staged": "lint-staged",
    "format:markup": "prettier -w -u src/**/*.{ts,js,scss,vue}",
    "format:script": "eslint --ext .ts,vue --fix --ignore-path .gitignore .",
    "format:style": "stylelint 'src/**/*.{vue,scss,css}' --fix --ignore-path .gitignore",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,js,vue}": "eslint src --fix",
    "*.{css,scss,vue}": "stylelint --fix",
    "*.{ts,js,scss,vue}": "prettier -w -u"
  },
  "dependencies": {
    "pinia": "^2.0.22",
    "vue": "^3.2.37",
    "vue-router": "^4.1.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@types/node": "^18.7.19",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.29.0",
    "@vitejs/plugin-vue": "^2.3.4",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/test-utils": "^2.0.2",
    "@vueuse/head": "^0.7.12",
    "autoprefixer": "^10.4.7",
    "c8": "^7.12.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-vue": "^9.1.1",
    "happy-dom": "^6.0.4",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.16",
    "postcss-html": "^1.5.0",
    "postcss-scss": "^4.0.5",
    "prettier": "^2.7.1",
    "sass": "^1.54.4",
    "stylelint": "^14.13.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-config-standard-scss": "^4.0.0",
    "typescript": "^4.7.4",
    "vite": "^2.9.13",
    "vite-plugin-pages": "^0.25.0",
    "vite-plugin-svg-icons": "^2.0.1",
    "vite-plugin-vue-layouts": "^0.7.0",
    "vitest": "^0.20.3",
    "vue-tsc": "^0.40.13"
  }
}
